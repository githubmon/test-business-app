<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.project.business.domain">

    <class name="Person" table="person">
        
 		<id name="dni" 
 		    column="dni_number" 
 		    type="java.lang.String"
 		>
            <generator class="assigned"/>
        </id>
        
        <property
            name="first_name"
            type="java.lang.String"
            update="true"
            insert="true"
            column="firstname"
        />
        
        <property
            name="surname"
            type="java.lang.String"
            update="true"
            insert="true"
            column="surname"
        />
        
        <property
            name="gender"
            type="java.lang.String"
            update="true"
            insert="true"
            column="gender"
        />
        
        <property
            name="email"
            type="java.lang.String"
            update="true"
            insert="true"
            column="email"
        />
        
        <property
            name="city"
            type="java.lang.String"
            update="true"
            insert="true"
            column="city"
        />
        
        <property
            name="birthDate"
            type="java.util.Date"
            update="true"
            insert="true"
            column="date_of_birth"
        />
        
	</class>

</hibernate-mapping>